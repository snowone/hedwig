<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>windows-bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/release</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>bin/*</exclude>
        <exclude>conf/*</exclude>
        <exclude>logs/*</exclude>
        <exclude>sql/*/*.sql</exclude>
      </excludes>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/release</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>conf/*</include>
        <include>logs/*</include>
        <include>sql/*/*.sql</include>
      </includes>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/release</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>bin/*.bat</include>
      </includes>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>${pom.artifactId}-${pom.version}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>run.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
		<include>${pom.groupId}:hedwig-api</include>
		<include>${pom.groupId}:hedwig-server</include>
        <include>log4j:log4j</include>
        <include>javax.activation:activation</include>
        <include>javax.mail:mail</include>
        <include>commons-beanutils:commons-beanutils</include>
        <include>commons-cli:commons-cli</include>
        <include>commons-collections:commons-collections</include>
        <include>commons-dbcp:commons-dbcp</include>
        <include>commons-io:commons-io</include>
        <include>commons-lang:commons-lang</include>
        <include>commons-logging:commons-logging</include>
        <include>commons-pool:commons-pool</include>
        <include>dnsjava:dnsjava</include>
        <include>oro:oro</include>
        <include>net.sf.ehcache:ehcache</include>
        <include>mysql:mysql-connector-java</include>
        <include>org.apache.james:apache-mime4j</include>
        <include>org.apache.james:apache-jsieve</include>
        <include>org.jboss.netty:netty</include>
        <include>org.aspectj:aspectjtools</include>
        <include>cglib:cglib-nodep</include>
        <include>org.springframework:spring</include>
        <include>opensymphony:quartz-all</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
